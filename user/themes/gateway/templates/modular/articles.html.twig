{% set sistemas = taxonomy.findTaxonomy({'category':page.header.category})  %}
{% if sistemas %}
<div class="featured-posts">
      <div class="row">
        {% for row in sistemas|slice(0,3) %}
        <div class="large-4 columns">
          {% include 'partials/blog_item.html.twig' with {'page':row, 'truncate':true, 'readmore': false} %}
        </div>
            {% endfor %}
      </div>
</div>
{% endif %}



