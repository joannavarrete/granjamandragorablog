<a id="product-button" href="#"
   class="button snipcart-add-item"
   data-item-id="{{ page.header.product_id }}"
   data-item-name="{{ page.header.title }}"
   data-item-price="{{ page.header.price }}"
   data-item-url="{{ page.url }}"
   data-item-taxes="IVA 10%"
   data-item-has-taxes-included="true"
   data-item-max-quantity="10"

   {% for item in page.header.custom %}

   data-item-custom{{loop.index}}-name="{{item.name}}"
   data-item-custom{{loop.index}}-options="{{item.options}}"
   data-item-custom{{loop.index}}-value="{{item.value}}"
   
   {% endfor %}
   
   
   {% spaceless %}
   {% if snipcart_image %}
   data-item-image="{{ snipcart_image.cropResize(50,50).url }}"
   {% endif %}
   {% endspaceless %}
   >
  <i class="fa fa-shopping-cart"></i> AÃ±adir 
</a>
